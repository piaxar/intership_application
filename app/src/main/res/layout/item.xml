<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cheque_item_background"
    android:orientation="horizontal"
    android:padding="2dp">

    <TextView
        android:id="@+id/text_view_dish_name"
        style="@style/text_view_dish_name_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/dish_name" />

    <TextView
        android:id="@+id/text_view_one_dish_price"
        style="@style/text_view_one_dish_price_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/dish_price" />

    <TextView
        android:id="@+id/text_view_total_dish_price"
        style="@style/text_view_total_dish_price_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/dish_total_price" />

</LinearLayout>