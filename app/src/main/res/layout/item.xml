<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/cheque_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_view_dish_name"
        style="@style/cheque_text_view_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:text="@string/dish_name" />

    <TextView
        android:id="@+id/text_view_one_dish_price"
        style="@style/cheque_text_view_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/dish_price" />

    <TextView
        android:id="@+id/text_view_total_dish_price"
        style="@style/cheque_text_view_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/dish_total_price" />

</LinearLayout>